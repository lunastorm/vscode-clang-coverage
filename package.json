{
    "name": "vscode-clang-coverage",
    "displayName": "Clang-Coverage",
    "description": "Display Clang source-based coverage result",
    "version": "0.0.12",
    "publisher": "lunastorm",
    "license": "MIT",
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.clangCoverageShow",
        "onLanguage:c",
        "onLanguage:cpp"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.clangCoverageRefresh",
                "title": "Refresh",
                "category": "Clang-Coverage"
            },
            {
                "command": "extension.clangCoverageShow",
                "title": "Show",
                "category": "Clang-Coverage"
            },
            {
                "command": "extension.clangCoverageHide",
                "title": "Hide",
                "category": "Clang-Coverage"
            }
        ],
        "configuration": {
            "title": "clang-coverage",
            "properties": {
                "clang-coverage.profDir": {
                    "type": ["string", "null"],
                    "default": null,
                    "description": "Path to the directory containing .profraw"
                },
                "clang-coverage.profPattern": {
                    "type": ["string", "null"],
                    "default": null,
                    "description": "Profraw's pattern"
                },
                "clang-coverage.targetExe": {
                    "type": ["string", "null"],
                    "default": null,
                    "description": "Path to the profiled executable"
                },
                "clang-coverage.show": {
                    "type": ["boolean"],
                    "default": false,
                    "description": "Show coverage result or not"
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.11.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "glob": "^7.1.2"
    },
    "repository": "https://github.com/lunastorm/vscode-clang-coverage"
}
